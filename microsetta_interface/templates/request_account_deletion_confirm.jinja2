{% extends "sitebase.jinja2" %}
{% set page_title = _("Account Deletion Request") %}
{% set show_breadcrumbs = True %}

{% block head %}
<script type="text/javascript" language="javascript" src="/static/js/ruleset.js"></script>
<!-- Defines COUNTRIES_LIST, based on ebaranov's country/state json with corrections -->
<!-- See https://gist.github.com/ebaranov/41bf38fdb1a2cb19a781 -->
<script type="text/javascript" language="javascript" src="/static/js/country_state_list.js"></script>
<script type="text/javascript" language="javascript" src="/static/js/us_states.js"></script>
<script type="text/javascript" language="javascript" src="/static/vendor/jquery-validation/messages_{{ _(EN_US_KEY) }}.js"></script>

<style type="text/css">
    body {
        padding-left: 0;
        margin: 0;
    }
</style>
{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item" aria-current="page"><a href="/accounts/{{account_id}}">{{ _('Dashboard') }}</a></li>
    <li class="breadcrumb-item active" aria-current="page">{{ _('Account Deletion Request') }}</li>
{% endblock %}

{% block content %}
<center>
    <div class="card card-account">
        <h2 class="centered">{{ _('Account Deletion Requested') }}</h2>        <div class="card-body">
            <center>
                {{ _("We are sorry to see you go! Your request has been logged, and an administrator will review the request soon. You will receive an email notification once your account has been deleted.") }}
            </center>
        </div>
    </div>
</center>
{% endblock %}